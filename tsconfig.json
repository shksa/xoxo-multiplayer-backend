{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "es2018", "dom"
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules", "**/node_modules/*"
  ],
  "include": [
    "./src/**/*" // Read in any files it understands in the src directory 
  ]
}