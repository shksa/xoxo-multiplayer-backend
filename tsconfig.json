{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./built",
    "target": "esnext",
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "strict": true, // enables --noImplicitAny, --noImplicitThis, --alwaysStrict, --strictBindCallApply, --strictNullChecks, --strictFunctionTypes and --strictPropertyInitialization
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
  },
  "exclude": [
    "node_modules", "**/node_modules/*"
  ],
  "include": [
    "src/**/*" // Read in any files it understands in the src directory 
  ]
}